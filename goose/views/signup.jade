extends layout

block content
  form(method='post', action='signup', enctype='application/x-www-form-urlencoded')
    h3 Sign Up
    if exists
      .error
        | That user already exists. Are you trying to
	a(href="/login") Login
	| ?
    if invalid
      .error Please enter valid email address or password. Yours wasn't!
    ul
      li
	label(for='email') Email
        input#email(name='email')
      li
	label(for='pass') Password
	input#pass(name='pass')
    input(type='submit',value='Sign Up')

